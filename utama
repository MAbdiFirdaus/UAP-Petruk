#include <iostream>
#include <queue>
#include <windows.h>
#include <conio.h>
using namespace std;

void film(){
	string film[5]={"Jakarta VS Everybody", "Ben & Jody    ", "NKTCHI        ", "KKN Desa Penari", "Morbius          "};
	int harga[5]={20000, 15000, 10000, 15000, 20000};
	for (int i=0; i<5; i++){
		cout<<i+1<<"."<<film[i]<<"\t\t\t\t\t\t"<<"Rp."<<harga[i]<<endl;
	}
	
	int beli(int pilih, int tiket){
	switch (pilih){
		case 1 :
			return 20000*tiket;
			break;
		case 2 :
			return 15000*tiket;
			break;
		case 3 :
			return 10000*tiket;
			break;
		case 4 :
			return 15000*tiket;
			break;
		case 5 :
			return 20000*tiket;
			break;
	}
	
}

void displayAntrian(queue<string> antri){
	queue<string> que = antri;
	int number = 1;
	if(que.empty()){
	while(que.empty()){
		cout<<"Antrian kosong!";
	}
	}else{
		while(!que.empty()){
		cout<<number<<". "<<que.front()<<"\n";
		que.pop();
		number++;
		}
		getch();
	}
	cout<<"\n";
}

int main(){
	string film2[5]={"Jakarta VS Everybody", "Ben & Jody    ", "NKTCHI        ", "KKN Desa Penari", "Morbius          "};
	int pil,pil2,tiket,bayar,bayar2;
	string nama;
	char pilihan;
	queue<string>antri;
	
	
	cout<<"Apakah anda ingin mengantri memesan film? ";
	cin>>pilihan;
	if (pilihan == 'Y'||pilihan == 'y'){
	
	do{
		cout<<"1. Mengantri(push)\n2. Membayar(pop)\n3. Melihat antrian\n4.Hapus semua antrian\n5. Exit program";
	cout<<"\npilihan : ";
	cin>>pil;
	
	if(pil==1){
	cout<<"masukkan nama anda : ";
	cin>>nama;
	antri.push(nama);
	cout<<"Silahkan menunggu antrian\n";
	Sleep(1000);
	system("cls");
	getch();
	}
	else if(pil==2){
		if(antri.empty()){
			
			cout<<"antrian kosong...\n";
			Sleep(1000);
			system("cls");
		}
		
		else{
			
		film();
		cout<<"silahkan"<<antri.front()<<"pilih film yang ingin anda tonton : ";
		cin>>pil2;
		cout<<"banyaknya tiket yang ingin anda pesan : ";
		cin>>tiket;
		cout<<"Harga yang harus anda bayar : ";
		cout<<beli(pil2, tiket)<<"\n";
		
		cout<<antri.front()<<" silahkan membayar : ";
		cin>>bayar;
		if(bayar<beli(pil2,tiket)){
			cout<<"Pembayaran anda kurang Rp."<<beli(pil2,tiket)-bayar<<endl;
			cout<<"Silahkan membayar kembali : ";
			cin>>bayar2;
			if(bayar2==beli(pil2,tiket)-bayar){
				cout<<"Film : "<<film2[pil2-1];
				cout<<"\nJumlah tiket : "<<tiket;
				cout<<"\nTerimakasih "<<antri.front()<<" selamat menonton \n";
				antri.pop();
				}
				
			else if(bayar==beli(pil2,tiket)){
			cout<<"Film : "<<film2[pil2-1];
			cout<<"\nJumlah tiket : "<<tiket;
			cout<<"\nTerimakasih "<<antri.front()<<" selamat menonton \n";
			antri.pop();
			cout<<"\nAnda akan dikeluarkan dari antrian.";
			Sleep(3000);
			system("cls");	
		}
		else{
			cout<<"Film : "<<film2[pil2-1];
			cout<<"\nJumlah tiket : "<<tiket;
			cout<<"\nKembalian anda : "<<bayar-beli(pil2,tiket)<<endl;
			cout<<"\nTerimakasih "<<antri.front()<<" selamat menonton \n";
			antri.pop();
			cout<<"\nAnda akan dikeluarkan dari antrian.";
			Sleep(3000);
			system("cls");
				
			
			}
	else if(pil==3){
		displayAntrian(antri);
		Sleep(3000);
		system("cls");
	}
	else if(pil==4){
		while(!antri.empty()) {
       	 antri.pop();
    	}
	}
	
		}
while(pil!=5);
	
	}
